<script type="text/javascript">
    function layIdMon(id) {
        $.ajax({
            url: '/Home/XemChiTietMon',
            method: 'GET',
            data: { id: id },
            success: function (data) {
                $('#modal-chitietmon').html(data);
            }
        });
