
@using Model.Entities;
@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Model.Entities.tblMonAn>

<section class="bg-5 h-500x main-slider pos-relative">
    <div class="triangle-up pos-bottom"></div>
    <div class="container h-100">
        <div class="dplay-tbl">
            <div class="dplay-tbl-cell center-text color-white pt-90">
                <h2 class="mt-30 mb-15">Menu</h2>
            </div><!-- dplay-tbl-cell -->
        </div><!-- dplay-tbl -->
    </div><!-- container -->
</section>

@{
    Model1 db = new Model1();
    var mon = db.tblMonAns.First();
}
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="dialog">
        <div class="modal-content main-item" id="modal-chitietmon">
            @Html.Partial("XemChiTietMon", mon);
        </div>
    </div>
</div>

<section class="bg-lite-blue">
    <div class="container">
        <div class="heading"><h3>Pizza</h3></div>
        <div class="row">
            @foreach (tblMonAn item in Model)
            {
                if (item.LoaiMon == "Pizza" && item.KichThuoc == "Size S")
                {
                    <div class="col-md-6">
                        <div class="sided-90x mb-30 main-item">
                            <div class="s-left"><img class="br-3" src="~/Content/images/menu/@item.AnhMon" alt="Menu Image"></div><!--s-left-->
                            <div class="s-right">
                                <b>@item.TenMon</b>
                                <a class="float-right btn-fill-primary plr-5"
                                   data-toggle="modal"
                                   data-target="#exampleModal"
                                   onclick="layIdMon(@item.MaMon);">
                                    <p>Thêm ngay</p>
                                </a>
                                <p class="pr-70">@item.MoTa</p>
                            </div><!--s-right-->
                        </div><!-- sided-90x -->
                    </div><!-- food-menu -->
                }

            }

        </div><!-- row -->
    </div><!-- container -->
</section>


